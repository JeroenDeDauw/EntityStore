{
	"name": "queryr/entity-store",
	"type": "library",
	"description": "Provides persistence and basic lookup capabilities for collections of Wikibase entities",
	"keywords": [
		"Wikibase",
		"DataModel",
		"Terms",
		"Fingerprint",
		"Lookup"
	],
	"homepage": "https://github.com/JeroenDeDauw/EntityStore",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=5.5.0",
		"ext-mysql": "*",
		"ext-PDO": "*",

		"doctrine/dbal": "~2.5",
		"wikibase/data-model": "~4.0|~3.0|~2.5",
		"serialization/serialization": "~3.2"
	},
	"require-dev": {
		"ext-sqlite3": "*",

		"jeroen/wikibase-data-fixtures": "~1.0|0.x,>=0.2.3",

		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.2.0",
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3"
	},
	"autoload": {
		"psr-4": {
			"Queryr\\EntityStore\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
